<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addPaxTitle"
        android:layout_width="wrap_content"
        style="@style/Home.Bold"
        android:layout_height="wrap_content" />


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/grid_spacing_and_half"
        android:background="@drawable/white_border_transparent"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/grid_spacing"
            android:paddingRight="@dimen/grid_spacing">

            <TextView
                android:id="@+id/TitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                style="@style/Home.Small.Bold"
                android:layout_column="0" />

            <TextView
                android:id="@+id/titleEdit"
                style="@style/EditText.FlightSelling"
                android:layout_width="@dimen/fs_table_column_width"
                android:layout_height="@dimen/button_height"
                android:hint="@string/please_choose"
                android:gravity="center_vertical|right"
                android:background="@color/transparent"
                android:layout_column="1"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/grid_spacing"
            android:paddingRight="@dimen/grid_spacing"
            android:weightSum="3">


            <TextView
                android:id="@+id/firstNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                style="@style/Home.Small.Bold"
                android:layout_weight="1"
                android:layout_column="0"

                />

            <EditText
                android:id="@+id/firstNameEdit"
                style="@style/EditText.FlightSelling"
                android:layout_width="200dp"
                android:layout_height="@dimen/button_height"
                android:hint="@string/fs_passport"
                android:imeOptions="actionNext"
                android:inputType="textVisiblePassword|textNoSuggestions|textCapWords"
                android:maxLength="64"
                android:background="@color/transparent"
                android:gravity="center_vertical|right"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:layout_column="1"
                android:layout_weight="2" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pax_row_height"
            android:paddingLeft="@dimen/grid_spacing"
            android:paddingRight="@dimen/grid_spacing"
            android:weightSum="3">

            <TextView
                android:id="@+id/lastNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                style="@style/Home.Small.Bold"
                android:layout_weight="1"
                android:layout_column="0" />

            <EditText
                android:id="@+id/lastNameEdit"
                style="@style/EditText.FlightSelling"
                android:layout_width="230dp"
                android:layout_height="@dimen/button_height"
                android:hint="@string/fs_passport"
                android:background="@color/transparent"
                android:maxLength="64"
                android:gravity="center_vertical|right"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword|textNoSuggestions|textCapWords"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:layout_column="1"
                android:layout_weight="2" />

        </TableRow>

    </TableLayout>

</LinearLayout>